---
import FormSubInfo from "../components/FormSubInfo.astro";
import RegisterForm from "../components/RegisterForm.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <section>
    <h1>Register Account</h1>
    <RegisterForm />
    <FormSubInfo
      message="Already have an account?"
      href="/login"
      linkText="Log in"
    />
  </section>
</BaseLayout>

<style>
  section {
    padding: 80px 16px;
    max-width: 1280px;
    min-height: 100vh;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 24px;
    place-items: center;
  }

  h1 {
    font-size: 32px;
    font-weight: bold;
  }
</style>
