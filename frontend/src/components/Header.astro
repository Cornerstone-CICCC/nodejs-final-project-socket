---
import "../styles/global.css";
import Logo from "./Logo.astro";
---

<header>
  <div class="headerInner">
    <Logo />
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    background-color: var(--color-white);
    padding: 12px 16px;
  }

  .headerInner {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
</style>

<style is:global>
  .logouBtn {
    background-color: var(--color-black);
    color: var(--color-white);
    padding: 8px 24px;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 4px;
  }

  .logouBtn:hover {
    opacity: 0.7;
    border-radius: 4px 4px 0 0;
  }
</style>

<script is:inline type="module">
  document.addEventListener("DOMContentLoaded", async () => {
    const headerInner = document.querySelector(".headerInner");

    if (!headerInner) return;

    async function checkLoginStatus() {
      try {
        const res = await fetch("http://localhost:3000/api/users/check-login", {
          method: "GET",
          credentials: "include",
        });
        const { isLoggedIn } = await res.json();

        if (isLoggedIn) {
          const logoutLink = document.createElement("a");
          logoutLink.href = "/lp";
          logoutLink.id = "logout";
          logoutLink.textContent = "Logout";
          logoutLink.className = "logouBtn";

          headerInner.appendChild(logoutLink);
        }
      } catch (error) {
        console.error("Error checking login status:", error);
      }
    }

    checkLoginStatus();
  });

  document.getElementById("logout").addEventListener("click", function (event) {
    event.preventDefault(); // Prevenir la navegación por defecto

    // Hacer la solicitud de logout al backend
    fetch("http://localhost:3000/api/users/logout", {
      method: "GET", // O el método que utilices para logout en tu backend
      headers: {
        "Content-Type": "application/json",
      },
      credentials: "include", // Si usas cookies para manejar sesiones
    })
      .then((response) => {
        if (response.ok) {
          // Redirigir al usuario a la página de inicio
          window.location.href = "/login";
        } else {
          alert("Error al cerrar sesión");
        }
      })
      .catch((error) => {
        console.error("Error de conexión:", error);
      });
  });
</script>
